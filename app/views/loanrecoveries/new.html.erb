<%= form_for(@loanrecovery) do |f| %>
 <% if @loanrecovery.errors.any? %>
  <div id="error_explanation">
   <h2><%= pluralize(@loanrecovery.errors.count, "error") %> prohibited this loanrecovery from being saved:</h2>
   <ul>
    <% @loanrecovery.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
   </ul>
  </div>
 <% end %>
 <h1 align="center">New Defaulter</h1>
 <hr></hr>
 <table align="center">
  <tr align="right">
   <div class="field">
    <td align="right"><h4><%= f.label :name %></h4></td>
    <td align="right" style="padding-left:30px"><%= f.text_field :name, size: "70x10", class: "form-control input-lg", placeholder: "Enter Defaulter Name"%></td>
   </div>
  </tr>
  <tr><td><br></td></tr>
  <tr align="right">
   <div class="field">
    <td align="right"><label><h4><%= f.label :phone %></h4></label></td>
    <td align="right" style="padding-left:30px"><%= f.text_field :phone, size: "70x15", class: "form-control input-lg", placeholder: "Contact Number"%></td>
   </div>
  </tr>
  <tr><td><br></td></tr>
  <tr align="right">
   <div class="field">
    <td align="right"> <h4><%= f.label :address %></h4></td>
    <td align="right" style="padding-left:30px"> <%= f.text_field :address, size: "70x15", class: "form-control input-lg", placeholder: " Defaulter Address"%></td>
   </div>
  </tr>
  <tr><td><br></td></tr>
  <tr align="right">
   <div class="field">
    <td align="right"> <h4><%= f.label :email %></h4></td>
    <td align="right" style="padding-left:30px"> <%= f.text_field :email, size: "70x15", class: "form-control input-lg", placeholder: "Email ID"%></td>
   </div>
  </tr>
  <tr><td><br></td></tr>
  <tr align="right">
   <div class="field">
    <td align="right"> <h4><%= f.label :status %></h4></td>
    <td align="right" style="padding-left:30px"> <%= f.text_field :status, size: "70x15", class: "form-control input-lg", placeholder: "Status", width: "500px" %></td>
   </div>
  </tr>
  <tr><td><br></td></tr>
  <tr align="right">
   <div class="field" >	
    <td align="right"><h4><%= f.label :bankname %></h4></td>
    <td align="left" style="padding-left:30px"><%= f.select:bankname,Bank.all.collect { |p| ["#{p.name},#{p.branch}"] }, {:include_blank => 'None' }, class: "form-control input-lg" %>
    </td>
   </div>
  </tr>
  <tr><td><br></td></tr>
  <tr align="right">
   <div class="field" >
   <td align="right"><h4><%= f.label :loan %></h4></td>
   <td align="left" style="padding-left:30px"><%= f.select:loanname,Loan.all.collect { |p| ["#{p.loanname}"] }, {:include_blank => 'None' } , class: "form-control input-lg" %></td>
   </div>
  </tr>
 </table>
 <br><br>
 <div class="actions" align="center">
  <input class="btn btn-inverser my-btn" type="submit" value="Create Defaulter"></input>
 </div>
<% end %>
<ul class="pager">
 <li><%= link_to 'Back', loanrecoveries_path %></li>
</ul>
