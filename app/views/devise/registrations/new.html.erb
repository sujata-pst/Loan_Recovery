
<div class="form-signin">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<h3>Please Sign Up Here</h3>
  <div class="field inner-addon left-addon">
       <i class="glyphicon glyphicon-user"></i>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", size: "35x8", class: "form-control input-lg input-block" %>
  </div>

    <div class="field inner-addon left-addon">            
  <i class="glyphicon glyphicon-lock"></i>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", size: "35x10", class: "form-control input-lg" %>
  </div>


    <div class="field inner-addon left-addon">

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", size: "35x8", class: "form-control input-lg" %>
  </div>
<ul class="pager">
  <div class="actions">
   <li> <%= f.submit "Sign up", class: "btn btn-primary my-btn btn-lg btn-block" %></li>
  </div></ul>
<% end %>
<ul class="pager">
<li><%= render "devise/shared/links" %></li>
</ul>
</div>